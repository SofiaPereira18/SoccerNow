<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="244.0" prefWidth="274.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ul.fc.css.soccernow.controllers.HomeController">
    <VBox alignment="CENTER" spacing="20">

        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#goToPlayersPage" style="-fx-font-size: 16px; -fx-min-width: 200px; -fx-min-height: 50px;" text="Gestão de Jogadores" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#goToRefereesPage" style="-fx-font-size: 16px; -fx-min-width: 200px; -fx-min-height: 50px;" text="Gestão de Árbitros" />
        </HBox>

        <HBox alignment="CENTER" spacing="10">

            <children>
                <Button onAction="#goToTeamsPage" style="-fx-font-size: 16px; -fx-min-width: 200px; -fx-min-height: 50px;" text="Gestão de Equipas" />
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Button onAction="#goToGamesPage" style="-fx-font-size: 16px; -fx-min-width: 200px; -fx-min-height: 50px;" text="Gestão de Jogos"/>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Button onAction="#goToChampionshipsPage" style="-fx-font-size: 16px; -fx-min-width: 200px; -fx-min-height: 50px;" text="Gestão de Campeonatos"/>
            </children>
        </HBox>

    </VBox>

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
</StackPane>
